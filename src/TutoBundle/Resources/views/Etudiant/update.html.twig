{% extends "TutoBundle::Layout.html.twig" %}
{% block title %}TutoBundle:Etudiat:Update{% endblock %}
{% block body %}
    <h1>Update Student</h1>
    {% block content %}
        {% if  app.request.hasPreviousSession %}
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
        {{ form_start(form) }}
        <div class="form-group">
            {# {{ form_label(form.nom)}}#}
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form.edit, {'attr': {'class': 'btn btn-info'}}) }}
        {{ form_end(form) }}
    {% endblock %}
{% endblock %}

