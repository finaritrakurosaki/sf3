{% extends "TutoBundle::Layout.html.twig" %}

{% block title %}TutoBundle:Parole:addParole{% endblock %}

{% block body %}
 {% block content %}
    <h2>Add Parole page</h2>
    {% if  app.request.hasPreviousSession %}
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}
    <div align="left">
        <legend>Upload file</legend>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.parole)}}
            {{ form_widget(form.parole, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.langue, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form.upload, {'attr': {'class': 'btn btn-info'}}) }}
        {{ form_end(form) }}
    </div>
     <h2>Or</h2>
     <div align="right">
         <legend align="left" >Save text</legend>
         {{ form_start(form1) }}
         <div class="form-group">
             {{ form_label(form1.titre)}}
             {{ form_widget(form1.titre, {'attr': {'class': 'form-control'}}) }}
         </div>
         <div class="form-group">
             {{ form_label(form1.parole)}}
             {{ form_widget(form1.parole, {'attr': {'class': 'form-control'}}) }}
         </div>
         <div class="form-group">
             {{ form_widget(form1.langue, {'attr': {'class': 'form-control'}}) }}
         </div>
         {{ form_row(form1.save, {'attr': {'class': 'btn btn-info'}}) }}
         {{ form_end(form1) }}
     </div>
 {% endblock %}
{% endblock %}
